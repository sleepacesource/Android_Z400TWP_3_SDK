<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_start_realtime_data"
                style="@style/common_bt"
                android:layout_height="@dimen/btn_height"
                android:layout_weight="1"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="6dp"
                android:text="@string/view_data" />

            <Button
                android:id="@+id/btn_stop_realtime_data"
                style="@style/common_bt"
                android:layout_height="@dimen/btn_height"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="0dp"
                android:text="@string/off_data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="0dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sleep_state"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_sleep_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/COLOR_3"
                android:textSize="@dimen/Title_3" />
        </LinearLayout>

        <View style="@style/page_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="0dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/heartrate"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_heartrate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/COLOR_3"
                android:textSize="@dimen/Title_3" />
        </LinearLayout>

        <View style="@style/page_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="0dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/breathrate"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_breathrate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/COLOR_3"
                android:textSize="@dimen/Title_3" />
        </LinearLayout>

        <View style="@style/page_divider" />

